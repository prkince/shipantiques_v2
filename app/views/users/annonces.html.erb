<div class="site-blocks-cover inner-page-cover overlay", id="section-clients" data-aos="fade" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">

      <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
        <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Annonces</h1>
        <p class="breadcrumb-custom"><%= link_to "Accueil", root_path %> <span class="mx-2">&gt;</span> <span>Annonces</span></p>
      </div>
    </div>
  </div>
</div>

<div class="site-section bg-light" id="section-infos">
	<div class="container">
		<div id="section-annonces">
			<button id="upload_widget" class="cloudinary-button">Poster une annonce (format JPEG SVP)</button>
		</div>

		<style>
			#section-annonces {
				display: flex;
			 	align-items: center;
			 	justify-content: center;
			}
			#section-annonces 	button {
				background-color: #2F98F3!important;
			}
		</style>
		<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>  
		<script type="text/javascript">  
			const myWidget = cloudinary.createUploadWidget({
			cloudName: 'shipantiques', 
			uploadPreset: 'yb3wgtjx',
			format: 'jpg'
		}, (error, result) => { 
				if (!error && result && result.event === "success") { 
			  		console.log('Done! Here is the image info: ', result.info);
			  		alert("L'annonce à bien été publiée");
					}
			})
			document.getElementById("upload_widget").addEventListener("click", function(){
				myWidget.open();
			}, false);
		</script>

	</div>
</div>